<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:id="@+id/tab2_layout">

        <ImageView
            android:id="@+id/tab2_map_image"
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/map" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="4">
            <ImageView
                android:id="@+id/tab2_img1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/hospital"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/tab2_img2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/house"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/tab2_img3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/restaurant"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/tab2_img4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/shopping_dim"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/list"/>

    </LinearLayout>
</ScrollView>
